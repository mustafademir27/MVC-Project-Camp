@model EntityLayer.Concrete.Admin

@{
    ViewBag.Title = "AddAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<h1>Yeni Admin Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddAdmin", "Authorization", FormMethod.Post))
{
<div class="form-group">
    @Html.Label("Admin Kullanıcı Adı")
    @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" }) <!--input yerine TextBoxFor kullanmak daha sağlıklı oluyor. Çünkü input'da name alanına yanlış girersek kod çalışmaz. Burada öyle bir ihtimal olmuyor.'-->
    @*@Html.ValidationMessageFor(x => x.CategoryName)*@
    <br />
    @Html.Label("Şifreyi Giriniz")
    @Html.TextAreaFor(x => x.AdminPassword, new { @class = "form-control" })
    @*@Html.ValidationMessageFor(x => x.CategoryDescription)*@
    <br />
    @Html.Label("Rolü Seçiniz")
    @Html.TextAreaFor(x => x.AdminRole, new { @class = "form-control" })
    @*@Html.ValidationMessageFor(x => x.CategoryDescription)*@
    <br />
    <button class="btn btn-info" id="btn1">Kaydet</button>
</div>
}

<!--Kaydet butonuna basıldığında ekranda sweet alert çıkması için-->
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>

<script>
    $("#btn1").click(function () {
        swal("Tebrikler", "Başarılı bir şekilde eklendi!", "success"); // info, error, warning de kullanabilirsin.
    });
</script>



